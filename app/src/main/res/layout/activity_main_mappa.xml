<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"

    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/mappafrases"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/roboto_thin"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:textIsSelectable="false" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="106dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_site2"
            android:layout_width="113dp"
            android:layout_height="107dp"

            android:layout_marginRight="20dp"
            android:background="@drawable/jardineiro" />

        <Button
            android:id="@+id/btn_site3"
            android:layout_width="113dp"
            android:layout_height="107dp"

            android:layout_marginLeft="40dp"
            android:background="@drawable/sacolao" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_restrito"
        android:layout_width="113dp"
        android:layout_height="107dp"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="256dp"
        android:background="@drawable/logo_note_dois" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sair"
        android:layout_width="49dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Sair"
        android:textColor="@android:color/holo_blue_bright" />


</RelativeLayout>